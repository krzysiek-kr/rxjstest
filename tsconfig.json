    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
